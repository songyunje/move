package com.ssafy.rest.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
@RequestMapping("/rest1")
public class TestController {
	// 메소드를 쭉 작성
	
	// http://localhost:8080/mvc/rest1/test1 --> 404 error --> 뷰 리졸버가 저 이름(hi rest)를 뷰네임으로 인식하고 경로를 생성 
	@GetMapping("/test1")
	public String test1() {
		return "hi rest";
	}
	
	// http://localhost:8080/mvc/rest1/test2 --> @ResponseBody 붙임 --> JSP 화면 반환이 아니라 데이터를 넘긴다.
	@GetMapping("/test2")
	@ResponseBody
	public String test2() {
		return "hi rest";
	}

	// http://localhost:8080/mvc/rest1/test3
	@GetMapping("/test3")
	@ResponseBody
	public Map<String, String> test3() {
		// Map은 key와 value를 가지고 있음.
		Map<String, String> data = new HashMap<>();
		
		data.put("id", "ssafy");
		data.put("password", "1234");
		data.put("name", "양명균");
		
		return "hi rest";
	}
}

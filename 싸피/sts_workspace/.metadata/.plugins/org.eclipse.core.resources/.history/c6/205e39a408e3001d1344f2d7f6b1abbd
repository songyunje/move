package com.ssafy.rest.controller;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.ssafy.rest.model.dto.User;

@Controller
@RequestMapping("/rest1")
public class TestController2 {
	// 메소드를 쭉 작성
	
	// http://localhost:8080/mvc/rest1/test1 --> 404 error --> 뷰 리졸버가 저 이름(hi rest)를 뷰네임으로 인식하고 경로를 생성 
	@GetMapping("/test1")
	public String test1() {
		return "hi rest";
	}
	
	// http://localhost:8080/mvc/rest1/test2 --> @ResponseBody 붙임 --> JSP 화면 반환이 아니라 데이터를 넘긴다.
	@GetMapping("/test2")
	@ResponseBody
	public String test2() {
		return "hi rest";
	}

	// http://localhost:8080/mvc/rest1/test3 --> Map을 반환하면 얘도 키/벨류니까 알아서  JSON으로 바꿔주지 않을까? --> NO!
	@GetMapping("/test3")
	@ResponseBody
	public Map<String, String> test3() {
		// Map은 key와 value를 가지고 있음.
		Map<String, String> data = new HashMap<>();
		
		data.put("id", "ssafy");
		data.put("password", "1234");
		data.put("name", "양띵균");
		
		return data; // jackson을 추가했더니 맵인데도 JSON으로 바꿔줌
	}
	
	// http://localhost:8080/mvc/rest1/test4 --> 객체를 반환해도 알아서 JSON으로 바꿔줌
	@GetMapping("/test4")
	@ResponseBody
	public User test4() {
		User user = new User();
		user.setId("ssafy");
		user.setPassword("1234");
		user.setName("송윤제");
		
		return user;
	}
	
	// http://localhost:8080/mvc/rest1/test5 --> List반환. 자바스크립트 배열 형태로 알아서 바꿔서 반환
	@GetMapping("/test5")
	@ResponseBody
	public List<User> test5() {
		List<User> list = new ArrayList<>();
		
		for(int i=1;i<=5;i++) {
			User user = new User();
			user.setId("ssafy"+i);
			user.setPassword("1234");
			user.setName("송윤제"+"bot"+i);	
			list.add(user);
		}
		
		return list;
	}
}
